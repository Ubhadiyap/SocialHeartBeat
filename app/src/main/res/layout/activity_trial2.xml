<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:fillViewport="false"
                android:id="@+id/scrollView1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <!--Leave Status-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:padding="8dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/linearLayout2">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/cv2"
                            card_view:cardElevation="2dp"
                            card_view:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:selectableItemBackground">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txt_homework_caption"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Quiz Instructions"
                                    android:layout_alignParentTop="true"
                                    android:textColor="@color/black_color"
                                    android:padding="10dp" />

                                <include
                                    layout="@layout/item_divider"
                                    android:layout_height="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/txt_homework_caption"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/include2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="1. Instruction 1"
                                    android:id="@+id/txt_circular_status"
                                    android:layout_below="@+id/txt_homework_caption"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:textColor="@color/material_blue_grey_80"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="2. Instruction 2"
                                    android:id="@+id/textView2"
                                    android:layout_below="@+id/txt_circular_status"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:textColor="@color/material_blue_grey_80"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="3. Instruction 3"
                                    android:id="@+id/textView3"
                                    android:layout_below="@+id/textView2"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:textColor="@color/material_blue_grey_80"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>




                    <!--Other Information-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:padding="8dp"
                        android:layout_below="@+id/linearLayout2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/linearLayout3">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/cv3"
                            card_view:cardElevation="2dp"
                            card_view:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:selectableItemBackground">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txt_details3"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Quiz Previuos Score"
                                    android:layout_alignParentTop="true"
                                    android:textColor="@color/black_color"
                                    android:padding="10dp" />

                                <include
                                    layout="@layout/item_divider"
                                    android:layout_height="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/txt_details3"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/include3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Created At"
                                    android:id="@+id/textView23"
                                    android:layout_below="@+id/txt_details3"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:textColor="@color/material_blue_grey_80"
                                    android:padding="10dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="12-07-2016"
                                    android:id="@+id/txt_created_at"
                                    android:layout_below="@+id/include3"
                                    android:layout_toRightOf="@+id/txt_details3"
                                    android:layout_toEndOf="@+id/txt_details3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Start Date"
                                    android:id="@+id/textView8"
                                    android:layout_below="@+id/txt_created_at"
                                    android:layout_alignLeft="@+id/include3"
                                    android:layout_alignStart="@+id/include3"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:textColor="@color/material_blue_grey_80"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="13-07-2016"
                                    android:id="@+id/txt_start_date"
                                    android:layout_below="@+id/textView23"
                                    android:layout_alignLeft="@+id/txt_end_date"
                                    android:layout_alignStart="@+id/txt_end_date" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="End Date"
                                    android:id="@+id/textView10"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignLeft="@+id/textView8"
                                    android:layout_alignStart="@+id/textView8"
                                    android:paddingBottom="10dp"
                                    android:textColor="@color/material_blue_grey_80"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="16-07-2016"
                                    android:id="@+id/txt_end_date"
                                    android:layout_below="@+id/textView8"
                                    android:layout_toRightOf="@+id/txt_details3"
                                    android:layout_toEndOf="@+id/txt_details3" />


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>



                </RelativeLayout>

            </ScrollView>



        </RelativeLayout>


    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>
